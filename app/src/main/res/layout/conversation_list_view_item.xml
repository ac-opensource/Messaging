<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginRight="@dimen/material_content_edge_margin_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contactAvatar"
        android:layout_centerVertical="true"
        tools:background="@color/background_black"
        app:civ_border_color="@color/background_white"
        app:civ_border_width="2dp"
        android:src="@drawable/ic_person_white_24dp"
        android:layout_marginLeft="@dimen/material_content_edge_margin_horizontal"
        android:layout_width="@dimen/material_list_avatar_size"
        android:layout_height="@dimen/material_list_avatar_size" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        tools:background="@color/background_gray_darkest"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/material_content_secondary_edge_margin_start"
        android:layout_height="@dimen/material_list_three_line_normal_height">

        <TextView
            android:id="@+id/conversationNameTextView"
            tools:text="Hyperion"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:textSize="@dimen/material_list_normal_primary_text_size"/>

        <TextView
            android:id="@+id/snippetTextView"
            tools:text="Welcome! Thanks for using our SMS app. We hope you enjoy the experience."
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="@dimen/material_list_normal_primary_text_size"/>

        <TextView
            android:id="@+id/dateTextView"
            tools:text="Jan 11"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="@dimen/material_list_normal_primary_text_size"/>

    </LinearLayout>

</RelativeLayout>